{
  "name": "solana-developer-content",
  "private": true,
  "description": "Solana developer content",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/solana-foundation/developer-content"
  },
  "scripts": {
    "runner": "npx ts-node -r tsconfig-paths/register",
    "contentlayer:build": "npx contentlayer build --clearCache",
    "dev": "yarn contentlayer:build && next dev -p 3001",
    "build": "yarn contentlayer:build && next build",
    "start": "next start",
    "test": "yarn contentlayer:build",
    "lint": "next lint",
    "prettier": "prettier -c \"**/*.{js,jsx,ts,tsx,md,css,md,mdx}\"",
    "prettier:fix": "prettier -cw \"**/*.{js,jsx,ts,tsx,md,css,md,mdx}\""
  },
  "dependencies": {
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "eslint": "8.45.0",
    "eslint-config-next": "14.1.0",
    "next": "14.1.0",
    "next-contentlayer": "0.3.4",
    "postcss": "8.4.26",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "contentlayer": "0.3.4",
    "prettier": "^3.2.4"
  }
}
