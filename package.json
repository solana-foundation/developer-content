{
  "name": "solana-developer-content",
  "private": true,
  "description": "Solana developer content",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/solana-foundation/developer-content"
  },
  "scripts": {
    "runner": "npx ts-node -r tsconfig-paths/register",
    "contentlayer:build": "npx contentlayer2 build --clearCache",
    "code-import": "npx esrun coder.ts",
    "dev": "yarn contentlayer:build && concurrently -p \"[{name}]\" -n \"code import,next dev\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn code-import --watch\" \"next dev -p 3001\"",
    "prebuild": "yarn code-import",
    "build": "yarn prettier:i18n && yarn contentlayer:build && next build",
    "start": "next start -p 3001",
    "test": "yarn contentlayer:build",
    "lint": "next lint",
    "prettier:i18n": "prettier -cw \"i18n/**/*.{js,jsx,ts,tsx,md,css,md,mdx}\" --ignore-path \"[]\"",
    "prettier": "prettier -c \"./**/*.{js,jsx,ts,tsx,md,css,md,mdx}\"",
    "prettier:fix": "prettier -cw \"**/*.{js,jsx,ts,tsx,md,css,md,mdx}\"",
    "crowdin:download": "crowdin download && npm run prettier:i18n",
    "crowdin:upload": "crowdin upload sources",
    "browser-sync": "browser-sync start --proxy \"localhost:3000\" --files \"**/*.md\"",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky install"
    "dev:sync": "yarn dev & (sleep 5 && yarn browser-sync)"
  },
  "dependencies": {
    "@crowdin/cli": "^3.18.0",
    "@types/node": "20.11.17",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "eslint": "8.45.0",
    "eslint-config-next": "14.1.0",
    "next": "14.1.0",
    "next-contentlayer2": "^0.4.6",
    "postcss": "8.4.26",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "contentlayer2": "^0.4.6",
    "husky": "^9.1.4",
    "ignore": "^5.3.1",
    "lint-staged": "^15.2.7",
    "mdast": "^3.0.0",
    "prettier": "^3.2.4",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "strip-indent": "^4.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,md,css,md,mdx,yml,yaml}": "yarn prettier:fix"
  }
}